# Configurações do Banco de Dados
DB_PASSWORD=sua_senha_segura
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@postgres:5432/contarapida

# Redis
REDIS_URL=redis://redis:6379

# NextAuth e configurações de URL
NEXTAUTH_URL=https://contarapida.acceleracrm.com.br
NEXT_PUBLIC_APP_URL=https://contarapida.acceleracrm.com.br
NEXTAUTH_SECRET=gere_uma_chave_secreta_forte

# Gestão Click API (Integração Financeira)
