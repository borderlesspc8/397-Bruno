GESTAO_CLICK_API_KEY=seu_access_token_aqui
GESTAO_CLICK_ACCESS_TOKEN=seu_access_token_aqui
GESTAO_CLICK_SECRET_TOKEN=seu_secret_token_aqui
GESTAO_CLICK_SECRET_ACCESS_TOKEN=seu_secret_token_aqui

# KOMMO CRM API (Integração de Contatos e Negociações)
KOMMO_JWT_TOKEN=seu_jwt_token_longa_duracao_aqui
